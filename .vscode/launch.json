{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "AlbumReviewModule",
            "request": "launch",
            "mainClass": "albumreview.core/json.AlbumReviewModule",
            "projectName": "albumreview-core"
        },
        {
            "type": "java",
            "name": "AlbumReviewApp",
            "request": "launch",
            "mainClass": "albumreview.ui/ui.AlbumReviewApp",
            "projectName": "albumreview-ui"
        },
        {
            "type": "java",
            "name": "FileHandler",
            "request": "launch",
            "mainClass": "albumreview.core/core.FileHandler",
            "projectName": "albumreview-core"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch ALBUM-REVIEW - multi-module, multi-package ",
            "request": "launch",
            "mainClass": "albumreview.ui/ui.App",
            "projectName": "albumreview-ui",
            "vmArgs": [
                "--add-opens",
                "albumreview.ui/ui=ALL-UNNAMED",
                "--add-exports",
                "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
            ]
        }
    ]
}